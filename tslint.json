{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "eofline": false,
    "indent": [
      true,
      "tabs",
      2
    ],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-whitespace"
    ],
    "no-bitwise": false,
    "no-console": [true, "log"],
    "no-namespace": false,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "switch-default": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ]
  }
}
